class entity.Fx extends Entity {

/*------------------------------------------------------------------------
    CONSTRUCTEUR
 ------------------------------------------------------------------------*/
  function new() {
    super() ;
    fl_kill = true ;
    fl_useless = true ;
  }


/*------------------------------------------------------------------------
    MAIN
 ------------------------------------------------------------------------*/
  function update() {
    super.update() ;
    alpha -= 2*Timer.tmod ;
    if ( alpha<=0 )
      destroy() ;
  }
}
