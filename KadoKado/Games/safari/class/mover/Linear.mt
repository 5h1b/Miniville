class mover.Linear extends Mover {

/*------------------------------------------------------------------------
    CONSTRUCTEUR
 ------------------------------------------------------------------------*/
  function new(e) {
    super(e) ;
    dx = Std.random(20)/10+1 + Math.min( 6,e.game.level ) ;
  }


/*------------------------------------------------------------------------
    TIR DANS UNE DIRECTION
 ------------------------------------------------------------------------*/
  function move(x,y,spd) {
    var ang = Math.atan2( y-e.y, x-e.x ) ;
    dx = Math.cos(ang)*spd ;
    dy = Math.sin(ang)*spd ;
    e._rotation = ang*180/Math.PI ;
  }


/*------------------------------------------------------------------------
    MAIN
 ------------------------------------------------------------------------*/
  function update() {
    super.update() ;
  }
}



